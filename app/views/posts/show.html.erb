<div class="container">
  <div class="post-heading">
    <div class="mini-belt"><%= @post.title %></div>
    <p class="post-meta text-center"><i>Posted on <%= @post.created_at.to_date %></i></p>
  </div>
  <div class="post">
    <%= @post.body %>
  </div>
</div>
<footer>
  <center>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
    <!-- <% @post.unique_impression_count %> -->
  </center>
</footer>
